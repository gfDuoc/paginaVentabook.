
<%= render "devise/shared/links" %>

<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block">
              <br><br>
                <%= image_tag "books.png", class:"img-fluid mx-auto d-block" %>
            </div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Registrese!</h1>
                </div>
                <%= render "devise/shared/error_messages", resource: resource %>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                <div class="form-group">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> Minimo)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "current-password" %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :password_confirmation %><br />
                                    <%= f.password_field :password_confirmation, autocomplete: "nueva-password" %>
                                                    </div>
                <div class="form-group">
                  <div class="custom-control custom-checkbox small">
                    <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me, class:"custom-control-input" %>
                      <%= f.label :remember_me, class:"custom-control-label" %>
                    </div>
                    <% end %>
                  </div>
                </div>
                <%= f.submit "Login", class:"btn btn-primary btn-user btn-block"%>
                <hr>
                <% end %>
                <hr>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
